--smart-case

--sort-files

# Always color, even if piping to another program
--color

# Ignore .js files because I LOVE coffeescript
--type-set=JSFILES=.js
--noJSFILES

# HAML & SASS
--type-add=ruby=.haml,.sass,.scss
--type-add=html=.haml
--type-add=css=.sass,.scss
# Ruby
--type-add=ruby=Rakefile,Capfile,Gemfile
# Cucumber
--type-set=cucumber=.feature
# CoffeeScript
--type-set=coffeescript=.coffee
# JSON
--type-set=json=.json
--type-add=js=.json
--type-add=yaml=.json
# Conf
--type-set=conf=.conf,.config
# Markdown, Textile, Rdoc & POD
--type-set=markdown=.markdown,.md,.mdown,.mkd,.mkdn
--type-set=textile=.textile
--type-set=rdoc=.rdoc
--type-set=pod=.pod
# documentation
--type-set=documentation=.markdown,.md,.mdown,.mkd,.mkdn,.textile,.rdoc,.pod.

--type-set=zsh=.zsh,.zsh-theme

--ignore-dir=plugins
--ignore-dir=rails
--ignore-dir=log
--ignore-dir=tmp
--ignore-dir=scratch_directory
--ignore-dir=cache
--ignore-dir=.bundle
--ignore-dir=.git
--ignore-dir=.sass-cache
--ignore-dir=node_modules
--ignore-dir=doc
--type-set=bin=.idx,.pack,.sqlite3,.sqlite3-journal,.rdb,.swf,.gif,.png,.ico,.jpg,.jpeg,.tiff,.pdf,.mp3,.JPG,.sqlite,.dat,.crt
--nobin
